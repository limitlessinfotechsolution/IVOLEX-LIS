{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "composite": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "6.0",
    "outDir": "dist/node"
  },
  "include": ["vite.config.js", "tailwind.config.js", "postcss.config.js"]
}
